  "Serilog": {
    "Using": [
      "Serilog.Sinks.File", 
      "Serilog.Sinks.Seq",
      "Serilog.Enrichers.Environment"
    ], 
    "MinimumLevel": {
      "Default":  "Debug",
      "Override": {
        "Microsoft": "Warning", 
        "System": "Warning" 
      } 
    },
    "WriteTo":  [
      {
        "Name":  "File",
        "Args": {
          "path":  "logs\\api-log.txt",
          "rollingInterval" :  "Day",
          "outputTemplate" :  "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}) <{SourceContext}> {Message}{NewLine}{Exception}" 
        } 
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich":  ["FromLogContext", "WithMachineName"],
    "Properties": {
      "Application": "Catapult-API"
    }
  },
  "AllowedHosts": "*",
  "NotificationProviders":  "SmtpEmail",
  "SmtpSetting": {
    "Server": "localhost",
    "Port": 0,
    "Username": "username",
    "Password": "password",
    "SenderEmail": "admin@opencatapult.net"
  }
